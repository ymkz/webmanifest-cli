{
  "name": "webmanifest-cli",
  "version": "0.2.0",
  "description": "A generator of webmanifest and icons",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ymkz/webmanifest-cli.git"
  },
  "homepage": "https://github.com/ymkz/webmanifest-cli#readme",
  "bugs": {
    "url": "https://github.com/ymkz/webmanifest-cli/issues"
  },
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=12"
  },
  "bin": {
    "webmanifest": "dist/index.js"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "keywords": [
    "generator",
    "icon",
    "webmanifest"
  ],
  "scripts": {
    "build": "tsup src/index.ts",
    "dev": "esno src/index.ts",
    "format": "prettier --write .",
    "lint": "npm run typecheck && npm run format",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "fs-extra": "^9.0.1",
    "image-size": "^0.9.1",
    "meow": "^7.1.1",
    "sharp": "^0.26.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/fs-extra": "^9.0.2",
    "@types/node": "^14.11.8",
    "@types/sharp": "^0.26.0",
    "esno": "^0.2.2",
    "husky": "^4.3.0",
    "prettier": "^2.1.2",
    "prettier-plugin-organize-imports": "^1.1.1",
    "prettier-plugin-pkg": "^0.8.0",
    "tsup": "^3.7.0",
    "typescript": "^4.0.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "prettier": {
    "printWidth": 80,
    "semi": false,
    "singleQuote": true
  }
}
