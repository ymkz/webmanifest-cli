{
  "name": "webmanifest-cli",
  "description": "A generator of webmanifest and icons",
  "license": "MIT",
  "author": "ymkz <ymkzly@gmail.com> (https://github.com/ymkz)",
  "homepage": "https://github.com/ymkz/webmanifest-cli",
  "repository": {
    "type": "git",
    "url": "https://github.com/ymkz/webmanifest-cli"
  },
  "bugs": {
    "url": "https://github.com/ymkz/webmanifest-cli/issues"
  },
  "version": "0.1.4",
  "main": "dist/index.js",
  "bin": {
    "webmanifest": "dist/index.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "run-s clean compile",
    "clean": "del dist",
    "compile": "tsc",
    "dev": "ts-node src/index.ts",
    "lint": "eslint 'src/**/*.ts'",
    "prepack": "run-s clean compile",
    "release": "semantic-release",
    "typecheck": "tsc --noEmit"
  },
  "types": "dist/index.d.ts",
  "dependencies": {
    "fs-extra": "^9.0.0",
    "image-size": "^0.8.3",
    "meow": "^6.1.0",
    "sharp": "^0.25.2"
  },
  "devDependencies": {
    "@babel/core": "7.9.0",
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@secretlint/secretlint-rule-preset-recommend": "1.1.0",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.0",
    "@types/fs-extra": "8.1.0",
    "@types/node": "13.11.0",
    "@types/sharp": "0.24.0",
    "@ymkz/eslint-config": "1.4.0",
    "@ymkz/prettier-config": "1.1.0",
    "babel-plugin-module-resolver": "4.0.0",
    "del-cli": "3.0.0",
    "eslint": "6.8.0",
    "husky": "4.2.3",
    "lint-staged": "10.1.2",
    "npm-run-all": "4.1.5",
    "prettier": "2.0.4",
    "prettier-package-json": "2.1.3",
    "secretlint": "1.1.0",
    "semantic-release": "17.0.4",
    "ts-node": "8.8.2",
    "typescript": "3.8.3",
    "yarnhook": "0.4.3"
  },
  "keywords": [
    "generator",
    "icon",
    "webmanifest"
  ],
  "engines": {
    "node": ">=12"
  }
}
