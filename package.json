{
  "name": "webmanifest-cli",
  "version": "0.4.0",
  "description": "A generator of webmanifest and icons",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ymkz/webmanifest-cli.git"
  },
  "license": "MIT",
  "engines": {
    "node": ">=12"
  },
  "bin": {
    "webmanifest": "dist/index.js"
  },
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts",
    "codecheck": "prettier --check .",
    "dev": "esno src/index.ts",
    "format": "prettier --write .",
    "lint": "npm run typecheck && npm run format",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "fs-extra": "^9.0.1",
    "image-size": "^0.9.1",
    "meow": "^9.0.0",
    "sharp": "^0.27.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.0",
    "@commitlint/config-conventional": "^12.0.0",
    "@types/fs-extra": "^9.0.2",
    "@types/node": "^14.11.8",
    "@types/sharp": "^0.27.0",
    "esno": "^0.4.0",
    "prettier": "^2.1.2",
    "prettier-plugin-organize-imports": "^1.1.1",
    "prettier-plugin-pkg": "^0.8.0",
    "tsup": "^4.0.0",
    "typescript": "^4.0.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
